{
  "name": "dot-cl-query-node",
  "private": "true",
  "version": "0.0.0",
  "description": "GraphQL server and Substrate indexer. Generated with â™¥ by Hydra-CLI",
  "author": "",
  "license": "ISC",
  "scripts": {
    "build": "rm -rf lib && tsc",
    "typegen": "hydra-typegen typegen manifest.yml",
    "codegen": "hydra-cli codegen",
    "db:create": "hydra-cli db:create",
    "db:drop": "hydra-cli db:drop",
    "db:revert": "hydra-cli db:revert",
    "db:reset": "hydra-cli db:drop && hydra-cli db:create && hydra-processor migrate && hydra-cli db:migrate",
    "processor:migrate": "hydra-processor migrate",
    "processor:db:migrate": "hydra-cli db:migrate",
    "processor:start": "hydra-processor run",
    "processor:db:create-migration": "hydra-cli db:create-migration",
    "query-node:start": "node ./lib/generated/server.js",
    "clean-and-setup": "./scripts/dev/clean-and-setup.sh",
    "test": "mocha -r ts-node/register src/mappings/**.spec.ts src/utils/**.spec.ts",
    "test:watch": "mocha -r ts-node/register --watch --watch-files src/mappings/**.ts,utils/**.ts mappings/**.spec.ts src/utils/**.spec.ts"
  },
  "dependencies": {
    "@polkadot/types": "^6.5.2",
    "@subsquid/hydra-common": "^5.0.0-alpha.12",
    "@subsquid/hydra-processor": "^5.0.0-alpha.12",
    "@subsquid/openreader": "^0.2.1",
    "@types/lodash": "^4.14.172",
    "bignumber.js": "^9.0.2",
    "dotenv": "^10.0.0",
    "inflected": "^2.1.0",
    "lodash": "^4.17.21",
    "loglevel": "^1.8.0",
    "simple-linear-scale": "^1.0.1",
    "ts-node": "^10.4.0",
    "typeorm": "^0.2.38"
  },
  "devDependencies": {
    "@polkadot/typegen": "^6.5.2",
    "@subsquid/hydra-cli": "5.0.0-alpha.12",
    "@subsquid/hydra-typegen": "5.0.0-alpha.12",
    "@types/chai": "^4.2.21",
    "@types/inflected": "^1.1.29",
    "@types/lodash": "^4.14.172",
    "@types/mocha": "^9.0.0",
    "@types/pg": "^8.6.1",
    "chai": "^4.3.4",
    "mocha": "^9.1.0",
    "typescript": "~4.4.4"
  }
}
